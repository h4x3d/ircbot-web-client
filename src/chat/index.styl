.chat
  width 100%
  height 100%
  padding-left 200px
  box-sizing border-box

.chat-channels
  width 200px
  height 100%
  position absolute
  top 0
  left 0
  background #171D1F
  overflow auto

.chat-window
  width 100%
  height 100%
  position relative
  box-sizing border-box
  &.input-visible
    padding-bottom 50px
    .chat-input
      display block

.chat-input
  width 100%
  height 45px
  display none
  background #E4E4E4
  position absolute
  bottom 0
  left 0
  box-sizing border-box
  padding 5px 5px
  .input
    width 100%

.chat-messages
  width 100%
  height 100%
  overflow auto

.chat-message
  border-bottom 1px solid #E4E4E4
  padding 1em
  position relative
  padding-right 180px

.chat-message-body
  margin-left 1em

.chat-message-timestamp
  position absolute
  top 1em
  right 1em

.channel
  color #fff
  padding 1em
  font-weight 200
  font-size 14px
  cursor pointer
  &.selected
    background #3A3F40
