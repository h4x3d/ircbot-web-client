.chat
  width 100%
  height 100%
  padding-left 200px

.chat-channels
  width 200px
  height 100%
  position absolute
  top 0
  left 0
  background #171D1F

.chat-window
  width 100%
  height 100%
  position relative

.chat-input
  width 100%
  height 50px
  background green
  position absolute
  bottom 0
  left 0

.chat-messages
  width 100%
  height 100%

.chat-message
  border-bottom 1px solid #E4E4E4
  padding 1em

