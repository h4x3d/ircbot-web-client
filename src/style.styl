body, html
  margin 0
  width 100%
  height 100%
  font 13px 'Helvetica Neue', Helvetica, arial, sans-serif
  color #333

@import './chat'

.view
  width 100%
  height 100%

.modal
  display none
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  &:before
    width 100%
    height 100%
    content ''
    position absolute
    top 0
    left 0
    z-index 1
    background rgba(0, 0, 0, 0.4)
  &.visible
    display table

h1, h2, h3
  margin 0

.dialog-wrapper
  z-index 2
  position relative
  display table-cell
  padding 2em
  box-sizing border-box
  vertical-align middle

.dialog
  background #fff
  width 500px
  height 450px
  margin auto
  position relative
  box-sizing border-box
  padding-top 4.3em
  &.dialog-login
    width 75%
    height 75%
    max-width 500px
    max-height 380px

.dialog-content
  width 100%
  height 100%
  overflow auto

.dialog-content-wrapper
  width 100%
  height 100%
  display table

.dialog-content-container
  margin auto
  display table-cell
  vertical-align middle
  padding 1em 0

  form
    width 60%
    margin auto

    .btn
      width 100%
      padding 1em
      margin-top 1em

    label
      display block
      margin-bottom 0.5em
      font-size 1.2em
      font-weight 200
    input
      width 100%

.dialog-header
  width 100%
  box-sizing border-box
  padding 1em
  border-bottom 1px solid #E4E4E4
  position absolute
  top 0
  left 0
  h1
    font-weight 100
    font-size 2em
    letter-spacing 3px

.input-group
  padding 0.5em 0

.input
  border 1px solid #E5E5E5
  height 35px
  padding 0 1em
  box-sizing border-box

.btn
  border 0
  margin 0
  cursor pointer
  padding 1em 2em
  background #478BEF
  color #fff
  font inherit
  font-size 1.3em
  font-weight 100
  outline none
  &:hover
    background @background - 15

.box
  border 1px solid #E5E5E5
  padding 1em
  &.box-error
    border-color red
    color red
